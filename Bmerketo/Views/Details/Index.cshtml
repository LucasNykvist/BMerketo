@using Bmerketo.Models;
@model ProductModel

@{
    var products = await productService.GetAllAsync();
}

<!-- Advert Start -->
<section class="advert">
    <img src="~/images/Add your image here.png" alt="">
    <div class="information">
        <h3>SHOP</h3>
        <p>HOME. PRODUCT DETAILS</p>
    </div>
</section>
<!-- Advert End -->

<!-- Product Start -->
<section class="product mt-5 mb-5">
    <div class="container">
        <div class="product-images">
            <div class="top-image">
                <img src="@Model.Image" alt="">
            </div>
            <div class="bottom-images">
                <img src="@Model.Image" alt="">
                <img src="@Model.Image" alt="">
                <img src="@Model.Image" alt="">
                <img src="@Model.Image" alt="">

            </div>
        </div>
        <div class="product-information">
            <div class="info-top">
                <h2>@Model.Name</h2>
                <p>@Model.Description</p>
            </div>
            <div class="info-bottom">
                <ul>
                    <li class="star"><i class="fa-solid fa-star"></i></li>
                    <li class="star"><i class="fa-solid fa-star"></i></li>
                    <li class="star"><i class="fa-solid fa-star"></i></li>
                    <li class="star"><i class="fa-solid fa-star"></i></li>
                    <li class="star"><i class="fa-solid fa-star"></i></li>
                    <p>16 Reviews</p>
                </ul>

                <h3 class="price">@Model.Price $</h3>

                <div class="add-cart">
                    <div class="quantity">
                        <button>-</button>
                        <div class="amount">2</div>
                        <button>+</button>
                    </div>
                    <button class="btn-toggle add-to-cart">Add To Cart <i class="fa-regular fa-cart-plus"></i></button>
                </div>

                <div class="stock">
                    <div class="status">
                        <div class="color"></div>
                        <div class="color"></div>
                        <div class="color"></div>
                    </div>
                    <div class="sku">SKU: N/A</div>
                </div>

                <button class="btn-toggle wishlist">Add To Wishlist</button>

                <p class="category">Category: Category</p>

            </div>
        </div>
    </div>
</section>
<!-- Product End -->

