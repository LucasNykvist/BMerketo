<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bmerketo</title>
    <script src="https://kit.fontawesome.com/41c8b474e2.js" crossorigin="anonymous"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script defer src="js/script.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

        <header>

        <partial name="/Views/Partials/_LoginPartial.cshtml" />
        <div class="container">
            
            <img class="logo" src="images/Logo.svg" alt="">

            <div id="menu">

                <nav class="menu-links">
                    <a class="link" asp-controller="Home" asp-action="Index">HOME</a>
                    <a class="link" asp-controller="Products" asp-action="Index">PRODUCTS</a>
                    <a class="link" asp-controller="Contacts" asp-action="Index">CONTACT</a>
                </nav>

                <nav class="menu-icons d-flex px-2">
                    <a class="link" asp-controller="Login" asp-action="Index"><i class="fa-regular fa-search"></i></a>
                    <a class="link" href="#"><i class="fa-solid fa-cart-shopping"></i></a>
                </nav>

            </div>

            <button class="btn-toggle"><i class="fa-regular fa-bars"></i></button>

        </div>
    </header>
   
    @RenderBody()

        <footer>
        <p>© 2023 bmarketo.  All right reserved.</p>
    </footer>


    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
